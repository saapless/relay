{
  "name": "@saapless/relay",
  "version": "0.1.0",
  "description": "Relay.js Utilities",
  "type": "module",
  "publishConfig": {
    "access": "public"
  },
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "files": [
    "dist"
  ],
  "exports": {
    ".": {
      "default": "./dist/index.js",
      "types": "./dist/index.d.ts"
    },
    "./environment": {
      "default": "./dist/environment/index.js",
      "types": "./dist/environment/index.d.ts"
    },
    "./environment/*": {
      "default": "./dist/environment/*.js",
      "types": "./dist/environment/*.d.ts"
    },
    "./react": {
      "default": "./dist/react/index.js",
      "types": "./dist/react/index.d.ts"
    },
    "./react/*": {
      "default": "./dist/react/*.js",
      "types": "./dist/react/*.d.ts"
    },
    "./server": {
      "default": "./dist/server/index.js",
      "types": "./dist/server/index.d.ts"
    },
    "./server/*": {
      "default": "./dist/server/*.js",
      "types": "./dist/server/*.d.ts"
    },
    "./utils": {
      "default": "./dist/utils/index.js",
      "types": "./dist/utils/index.d.ts"
    },
    "./utils/*": {
      "default": "./dist/utils/*.js",
      "types": "./dist/utils/*.d.ts"
    }
  },
  "scripts": {
    "test": "NODE_OPTIONS=\"--experimental-vm-modules\" jest",
    "test:watch": "NODE_OPTIONS=\"--experimental-vm-modules\" jest --watch",
    "dev": "tsc --watch --project tsconfig.build.json",
    "build": "tsc --project tsconfig.build.json",
    "lint": "eslint .",
    "prepare": "husky"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/saapless/relay.git"
  },
  "author": "Saapless <dev@saapless.com>",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/saapless/relay/issues"
  },
  "homepage": "https://github.com/saapless/relay#readme",
  "devDependencies": {
    "@commitlint/cli": "^19.7.1",
    "@commitlint/config-conventional": "^19.7.1",
    "@eslint/js": "^9.20.0",
    "@jest/globals": "^29.7.0",
    "@types/eslint__js": "^8.42.3",
    "@types/eslint-config-prettier": "^6.11.3",
    "@types/eslint-plugin-security": "^3.0.0",
    "@types/jest": "^29.5.14",
    "@types/node": "^22.13.1",
    "@types/react-relay": "^18.2.0",
    "@types/relay-runtime": "^18.2.5",
    "eslint": "^9.20.0",
    "eslint-config-prettier": "^10.0.1",
    "eslint-import-resolver-typescript": "^3.7.0",
    "eslint-plugin-import": "^2.31.0",
    "eslint-plugin-security": "^3.0.1",
    "husky": "^9.1.7",
    "jest": "^29.7.0",
    "prettier": "^3.5.0",
    "relay-compiler": "^18.2.0",
    "semantic-release": "^24.2.2",
    "ts-jest": "^29.2.5",
    "typescript": "^5.7.3",
    "typescript-eslint": "^8.24.0"
  },
  "peerDependencies": {
    "react": "^18",
    "react-relay": "^18",
    "relay-runtime": "^18"
  }
}
